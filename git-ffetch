#!/bin/sh

remote='upstream'
branchesTfs=('qa' 'integration' 'default')
branchesRemote=('qa' 'integration' 'develop')
branchesLocal=('qa' 'integration' 'develop')

echo Fetching $remote...
git fetch $remote
echo.

echo Disregard uncommitted changes
for (( i=0; i<${#branchesTfs[@]}; i++ ))
do
	echo Reseting local branch ${branchesLocal[i]} to $remote/${branchesRemote[i]}...
	git checkout -B ${branchesLocal[i]}
	git reset --hard $remote/${branchesRemote[i]}
	echo.
	
	echo Fetching ${branchesTfs[i]} from TFS...
	git tfs fetch -i ${branchesTfs[i]}
	echo.
done